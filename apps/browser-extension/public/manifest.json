{
  "manifest_version": 3,
  "name": "DeepSeek Share",
  "version": "0.1.0",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["scripting"],
  "web_accessible_resources": [
    {
      "resources": [
        "components/ShareDialog.js",
        "assets/loading.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 